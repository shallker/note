@import 'units'

body
  background #EFEFEF

.note-adding
  .note-content
    height 200px

.note-list
  ul
    list-style-type none
    
    li
      margin-bottom 20px
      background #f2f2f2
      border solid 1px #e6e6e6
      padding 5px 20px
    
    li:hover
      border-color #DEDEDE

  a.note-preview
    color #888
    font-size 12px

  a.note-preview:hover
    color #333

  .note-labels
    .label
      font-size 10px
 
  .label a
    color #EFEFEF
  
  .label a:hover
    color white
